@using Microsoft.AspNetCore.Identity
@using SAGE.AspNetCore.Identity.Data
@model SAGE.Models.GroceryList
@inject SignInManager<SAGEUser> SignInManager
@inject UserManager<SAGEUser> UserManager

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 @if (SignInManager.IsSignedIn(User))
{

    <h1>Grocery List</h1>

    <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div  class="form-group invisible" style="height:1px">
                <label asp-for="Ingredient" class="control-label"></label>
                <select asp-for="IngredientId" class ="form-control" asp-items="ViewBag.IngredientId"></select>
            </div>
            <h3>  @ViewBag.IngredientName</h3>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="margin-top: 10px;" />
            </div>
        </form>
    </div>
</div>

    <div>
    <a href="@Url.Action("Index")">
        <button>Back to List</button>
    </a>
</div>

    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
}
else
{
    <h1>ERROR: Please login to view page</h1>
}